{

  "description": "Adds a Pomodoro Timer",
  "manifest_version": 2,
  "name": "QPomo",
  "version": "1.0",


  "permissions": [
    "activeTab"
  ],
  
  "browser_action": {
    "default_icon": {
      "48": "icons/clock-48.png"
    },
    "default_title": "QPomo",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "icons": {
    "48": "icons/clock-48.png"
  }


}